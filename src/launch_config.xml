<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>com.syzygy.export-commits</string>
        <key>ProgramArguments</key>
        <array>
            <string>bash</string>
            <string>-c</string>
            <string>~/.export-commits/start.sh</string>
        </array>
        <key>StartInterval</key>
        <integer>1</integer>
        <key>StandardOutPath</key>
        <string>$HOME/.export-commits/log.log</string>
        <key>StandardErrorPath</key>
        <string>$HOME/.export-commits/error.log</string>
    </dict>
</plist>